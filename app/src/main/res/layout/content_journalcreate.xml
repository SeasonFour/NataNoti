<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_journalcreate"
    tools:context="nata.fragz.com.natanoti.Journalcreate">

    <com.rey.material.widget.EditText
        android:id="@+id/textfield_et_char_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="textMultiLine"
        android:hint="Title..."
        app:et_inputId="@+id/textfield_et_char_counter_input"
        app:et_supportMode="charCounter"
        app:et_supportMaxChars="50"
        />

    <com.rey.material.widget.EditText
        android:id="@+id/textfield_et_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Compose..."
        app:et_inputId="@+id/textfield_et_label_input"
        app:et_supportMode="none"
        android:layout_below="@+id/textfield_et_char_counter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.rey.material.widget.Button
        android:id="@+id/button_bt_flat"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bt_height"
        android:layout_weight="0.4"
        android:text="Save journal"
        android:textColor="@color/colorJournalSave"
        android:background="@color/colorJournalbtnSave"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
